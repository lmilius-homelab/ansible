    - person
    - car
    - dog
    - cat

birdseye:
  enabled: true
  width: 1920
  height: 1080
  quality: 8
  #mode: objects
  mode: continuous

snapshots:
  enabled: true
  timestamp: true
  bounding_box: true
  retain:
    default: 60

record:
  enabled: true
  retain:
    days: 14
    mode: all
  events:
    retain:
      default: 30
      mode: active_objects

ui:
  live_mode: webrtc

detectors:
  coral1:
    type: edgetpu
    device: pci:0
  coral2:
    type: edgetpu
    device: pci:1
