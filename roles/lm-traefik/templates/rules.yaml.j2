http:
  routers:
    router-photoprism:
      entryPoints:
        - websecure
      rule: "Host(`photos.{{ domain_name }}`)"
      service: service-photoprism
      tls:
        certResolver: cloudflare
    router-homeassistant:
      entryPoints:
        - websecure
      rule: "Host(`homeassistant.{{ domain_name }}`)"
      service: service-homeassistant
      tls:
        certResolver: cloudflare
